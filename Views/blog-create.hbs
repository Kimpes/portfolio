<main>
    <div class="create-post-container">
        <div class="post-container">
            <form action="{{#if id}}/blog/edit/{{id}}{{else}}/blog/create{{/if}}" method="post">
                <div class="form-group">
                    <label class="form-label">Title</label>
                    <input
                        class="form-input"
                        type="text"
                        name="title"
                        placeholder="Title"
                        value="{{title}}"
                    />
                </div>
                <div class="form-group">
                    <label class="form-label">Description</label>
                    <textarea
                        class="form-input"
                        type="text"
                        name="description"
                        placeholder="Description"
                        rows="5"
                    >{{description}}</textarea>
                <input type="submit" value="{{#if id}}Update{{else}}Post{{/if}}" class="btn btn-primary">
            </form>
            {{#if id}}
                <a href="/blog" class="btn btn-primary">Cancel</a>
                {{!-- I couldn't get method="delete" to work, so i made a post middlewear with the path /contact/delete/ instead --}}
                <form action="/blog/delete/{{id}}" method="post">
                    <input type="submit" value="Delete" class="btn btn-primary deletion">
                </form>
            {{/if}}
            {{#if errorMessages.length}}
                <div class="errors-container">
                    <h2>Error</h2>
                    <ul class="errors-list">
                        {{#each errorMessages}}
                            <li>
                                {{this}}
                            </li>
                        {{/each}}
                    </ul>
                </div>
            {{/if}}
        </div>
    </div>
</main>